<div class="container" data-aos="fade-up" style="min-height:100vh; margin-bottom: 70px;">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="row">
                <div class="title">
                    <h3 class="topic">
                        Artists
                    </h3>
                </div>
                <div class="row mt-2">
                    {{#each artist}}
                    <div class="col-6 col-sm-4 col-md-3 col-lg-3 col-xl-2">
                        <div class="artist-card">
                            <a href="/artists/{{{artist_name}}}">
                                <div class="img-artist">
                                    <img src={{artist_img}} alt="">
                                </div>
                            </a>
                            <div class="text">
                                <a href="">
                                    <h5 class="name-artist">{{artist_name}}</h5>
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- animation scroll --}}
<script>
    AOS.init();
    
</script>